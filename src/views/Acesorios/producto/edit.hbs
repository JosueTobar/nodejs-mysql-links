<div class="card card-outline card-primary ">
    <div class="card-header">
        <h3 class="card-title"> Modificar Producto</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form action="/producto_Update/{{producto.idPRODUCTO}}" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="" for="minimo">Nombre</label>
                        <input type="text" class="form-control" name="nombre" value="{{producto.NOMBRE}}">
                        <input type="number" class="form-control" name="idproducto" value="{{producto.idPRODUCTO}}"  hidden >
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="" for="minimo">Codigo</label>
                       <input type="text" class="form-control"  value="{{producto.CODIGO}}" disabled >
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="" for="minimo">Minimo</label>
                          <input type="text" class="form-control"  value="{{producto.STOKMINIMO}}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tipo Unidad</label>
                        <select class="form-control select2" style="width: 100%;" name="tipounidad">
                            <option value="Unidades" selected="selected">Unidades</option>
                            <option value="kilogramos">Kilogramos</option>
                            <option value="Gramos">Gramos</option>
                            <option value="Yardas">Yardas</option>
                            <option value="Pares">Pares</option>
                            <option value="Docenas">Docenas</option>
                            <option value="Docenas de pares">Docenas de pares</option>
                            <option value="Rollos">Rollos</option>
                            <option value="Bolsas">Bolsas</option>
                            <option value="Cajas">Cajas</option>
                        </select>
                    </div>
                </div>
  
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="" for="minimo">Descripci√≥n </label>
                        <textarea class="form-control" name="descripcion" id="" cols="10" rows="3" > {{producto.DESCRIPCION}}</textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="" for="minimo">Imagen</label>
                        <input type="file" class="form-control-file" name="img" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"> Enviar </button>
            </from>
    </div>
