<!-- SELECT2 EXAMPLE -->
<div class="card card-outline card-primary ">
    <div class="card-header">
        <h3 class="card-title"> Modificar Usuario</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form action="/user_upd" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tipo de Usuario</label>
                        <select class="form-control select2" style="width: 100%;" name="idroles">
                            <option selected="selected" value="1">Administrador</option>
                            <option selected="selected" value="2">Materia Prima</option>
                            <option selected="selected" value="3">Bodega de Accesorios</option>
                            <option selected="selected" value="4">Inventario General</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="fullname">Nombre</label>
                        <input type="text" class="form-control" id="fullname" placeholder="Nombre" name="fullname" value="{{user.fullname}}">
                        <input type="text" class="form-control" id="fullname" placeholder="Nombre" name="idUsuario" hidden value="{{user.id}}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="username">Usuario</label>
                        <input type="text" class="form-control" id="username" placeholder="Usuario" name="username" value="{{user.username}}" >
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"> Enviar </button>
            </from>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">

    </div>
</div>