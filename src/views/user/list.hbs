<!-- Tabla -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                <h3 class="card-title">Usuarios</h3>
                            </div>
                            <div class="col-md2">
                                <a href="/user_add" class=" btn btn-primary  fa-pull-left"> Nuevo</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="DataTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Accion</th>
                                    <th>Nombre</th>
                                    <th>Usuario</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                <td> 
                                    <a href="user_edit/{{id}}" class="btn btn-primary"> <i class="fas fa-user-edit"></i></i>  </a> 
                                    <a href="user_delete/{{id}}" class="btn btn-danger"> <i class="fas fa-user-minus"></i>  </a> 
                                </td>
                                <td>{{fullname}}</td>
                                <td>{{username}}</td>
                                <td>{{rol}}</td>
                                </tr>
                                {{else}}
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Accion</th>
                                    <th>Nombre</th>
                                    <th>Usuario</th>
                                    <th>Tipo</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>