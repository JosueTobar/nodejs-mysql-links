<div class="row">
    <div class="col-md-12">
       
    </div>
</div>
<!-- Tabla -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                <h3 class="card-title">Productos</h3>
                            </div>
                            <div class="col-md-2  ">
                                <a href="/producto_add" class=" btn btn-primary fa-pull-right "> Nuevo</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="DataTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ACCION</th>
                                    <th>IMAGEN</th>
                                    <th>NOMBRE</th>
                                    <th>CODIGO</th>
                                    <th>DESCRIPCION</th>
                                    <th>MEDIDA</th>
                                    <th>ENTRADAS</th>
                                    <th>SALIDAS</th>
                                    <th>EXISTENCIAS</th>
                                </tr>
                            </thead>
                            <tbody>
                                      {{#each producto}}
                                <tr>
                                <td> 
                                    <a href="producto_transaccion/{{idPRODUCTO}}" class="btn btn-success ml-2 mt-2"> <i class="fas fa-retweet"></i></i>  </a> 
                                    <a href="producto_edit/{{idPRODUCTO}}" class="btn btn-primary ml-2 mt-2"> <i class="fas fa-edit"></i></i>  </a> 
                                </td>
                                <td> <img src="{{IMG}}" width="50" height="50" alt=""> </td>
                                <td>{{NOMBRE}}</td>
                                <td>{{CODIGO}}</td>
                                <td>{{DESCRIPCION}}</td>
                                <td>{{TIPOUNIDAD}}</td>
                                <td>{{ENTRADAS}}</td>
                                <td>{{SALIDAS}}</td>
                                <td>{{EXISTENCIA}}</td>
                                    </tr>
                                {{else}}
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ACCION</th>
                                    <th>IMAGEN</th>
                                    <th>NOMBRE</th>
                                    <th>CODIGO</th>
                                    <th>DESCRIPCION</th>
                                    <th>MEDIDA</th>
                                    <th>ENTRADAS</th>
                                    <th>SALIDAS</th>
                                    <th>EXISTENCIAS</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>