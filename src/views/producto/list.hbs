                                    <th>MEDIDA</th>
                                    <th>ENTRADAS</th>
                                    <th>SALIDAS</th>
                                    <th>EXISTENCIAS</th>
                                </tr>
                            </thead>
                            <tbody>
                                      {{#each producto}}
