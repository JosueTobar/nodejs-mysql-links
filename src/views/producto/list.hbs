                                    <a href="producto_edit/{{idPRODUCTO}}" class="btn btn-primary ml-2 mt-2"> <i class="fas fa-edit"></i></i>  </a> 
                                    <a href="producto_delete/{{idPRODUCTO}}" class="btn btn-danger ml-2 mt-2"> <i class="fas fa-trash-alt"></i>  </a> 
                                </td>
                                <td>{{IMG}}</td>
                                <td>{{NOMBRE}}</td>
                                <td>{{CODIGO}}</td>
                                <td>{{DESCRIPCION}}</td>
