                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ACCION</th>
                                    <th>IMAGEN</th>
                                    <th>NOMBRE</th>
                                    <th>CODIGO</th>
                                    <th>DESCRIPCION</th>
                                    <th>MEDIDA</th>
                                    <th>ENTRADAS</th>
                                    <th>SALIDAS</th>
                                    <th>EXISTENCIAS</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>